@model QuanLySinhVien.Models.DangKyLopHoc

@{
    ViewBag.Title = "Register";
}
@Html.Action("ViewRegister", "ClassRegister")
@if (ViewBag.isShow)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Đăng ký học</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IdMonHoc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdMonHoc, ViewBag.IdMonHoc as SelectList, "--- Chọn Lớp ---", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SinhVien.LopId, "", new { @class = "text-danger" })
                </div>
            </div>
            <h4>@ViewBag.Notify</h4>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm Lớp" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
